<% layout('./Boilerplate/Layout.ejs') -%>

<body>
  <header class="section__container header__container" id="home">
    <div class="header__image">
      <img
        src="assets/Screenshot 2024-08-09 203535.jpg"
        alt="header"
        style="
          height: 650px;
          width: 850px;
          border-radius: 50px;
          margin-right: -50px;
        " />
    </div>
    <div class="header__content">
      <div>
        <h1>Speak Freely</h1>
        <p>
          Effortlessly translate sign language for instant communication,
          fostering inclusivity and understanding between signers and
          non-signers with advanced technology.
        </p>
      </div>
    </div>
  </header>

  <section class="section__container deals__container">
    <div class="deals__card" id="features">
      <h2 class="section__header">Features</h2>
      <p>Unlock Seamless Communication with These Key Features</p>
    </div>
    <div class="deals__card">
      <span><i class="ri-body-scan-fill"></i></span>
      <h4>Real-Time Recognition</h4>
      <p>
        Instantly translates sign language gestures into spoken or written words
        for immediate understanding.
      </p>
    </div>
    <div class="deals__card">
      <span><i class="ri-emotion-happy-line"></i></span>
      <h4>User-Friendly Interface</h4>
      <p>
        Designed to be intuitive and accessible, making it easy for both deaf
        and hearing users to interact.
      </p>
    </div>
    <div class="deals__card">
      <span><i class="ri-global-line"></i></span>
      <h4>Multi-Language Support</h4>
      <p>
        Accommodates various sign languages from around the world, ensuring
        broad usability.
      </p>
    </div>
    <div class="deals__card" id="card4">
      <span><i class="ri-feedback-line"></i></span>
      <h4>Visual Feedback</h4>
      <p>
        Displays visual cues and feedback to confirm accurate gesture
        recognition and translation.
      </p>
    </div>
  </section>

  <div id="start">
    <span
      ><i
        class="ri-arrow-right-circle-fill"
        style="margin-left: 1200px; height: 40px; width: 40px"></i
    ></span>
    <h4 style="margin-left: 1200px; height: 40px; width: 40px">Get Started</h4>
  </div>

  <section class="section__container about__container" id="about">
    <div class="about__header">
      <div>
        <h2 class="section__header">About us</h2>
        <p class="section__description">
          At SignSense, we are passionate about bridging the communication gap
          between deaf and hearing individuals. Our commitment to innovative
          technology drives us to create solutions that enhance inclusivity and
          understanding in everyday interactions.
        </p>
      </div>
      <button class="about__btn">Learn More</button>
    </div>
    <div class="about__content">
      <div class="about__image">
        <img src="assets/sideimg.png" alt="about" />
      </div>
      <div class="about__grid">
        <div class="about__card">
          <h3>1.</h3>
          <h4>Who we are</h4>
          <p>
            We are dedicated professionals focused on revolutionizing
            communication, providing accessible tools
          </p>
        </div>
        <div class="about__card">
          <h3>2.</h3>
          <h4>What do we do</h4>
          <p>
            SignSense translates sign language into spoken or written words in
            real-time, empowering users to communicate effortlessly and
            effectively.
          </p>
        </div>
        <div class="about__card">
          <h3>3.</h3>
          <h4>How do we help</h4>
          <p>
            Our tutorials, videos, and coaching sessions guide users in
            mastering SignSense, enhancing skills for both new and experienced
            users.
          </p>
        </div>
        <div class="about__card">
          <h3>4.</h3>
          <h4>Create success story</h4>
          <p>
            Access cutting-edge technology and learning resources to transform
            communication, enabling everyone to connect and communicate with
            ease and inclusivity.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section__container blog__container" id="blogs">
    <h2 class="section__header">Blogs</h2>
    <div class="scrolling-wrapper">
      <div class="blog__card">
        <h4>
          Breaking Barriers: How SignSense is Revolutionizing Communication
        </h4>
        <p>
          In today’s fast-paced world, effective communication is essential.
          However, for many deaf and hard-of-hearing individuals, connecting
          with others can be challenging. Enter SignSense, a groundbreaking tool
          designed to bridge the communication gap between deaf and hearing
          people, making interactions seamless and inclusive.
        </p>
      </div>
      <div class="blog__card">
        <h4>What is SignSense?</h4>
        <p>
          SignSense is an innovative tool that uses advanced technology to
          recognize and translate sign language into spoken or written words in
          real-time. This ensures that both deaf and hearing individuals can
          communicate effortlessly, without the need for extensive technical
          expertise.
        </p>
      </div>

      <!-- Add more blog entries here if needed -->
    </div>
  </section>

  <section class="section__container client__container">
    <div class="client__content">
      <h2 class="section__header">What our happy clients say</h2>
      <p class="section__description">
        Testimonials Highlighting Our Commitment to Quality, Exceptional
        Service, and Customer Satisfaction
      </p>
      <!-- Slider main container -->
      <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <!-- Slides -->
          <div class="swiper-slide">
            <div class="client__card">
              <img src="assets/user-lokesh.jpg" alt="user" />
              <div>
                <p>
                  SignSense has truly transformed my communication with my deaf
                  colleagues. The real-time translation is incredibly accurate,
                  making our meetings seamless and productive.
                </p>
                <h4>Lokesh Surya Prakash</h4>
                <h5>⭐️⭐️⭐️⭐️⭐️</h5>
              </div>
            </div>
          </div>
          <div class="swiper-slide">
            <div class="client__card">
              <img src="assets/user-2.jpg" alt="user" />
              <div>
                <p>
                  The tutorials and coaching sessions are easy to follow and
                  incredibly helpful. I was able to start using SignSense
                  confidently in no time.
                </p>
                <h4>Prithvi</h4>
                <h5>⭐️⭐️⭐️⭐️</h5>
              </div>
            </div>
          </div>
          <div class="swiper-slide">
            <div class="client__card">
              <img src="assets/user-3.jpg" alt="user" />
              <div>
                <p>
                  The real-time translation feature is amazing. SignSense has
                  made my workplace more inclusive and welcoming for everyone.
                </p>
                <h4>Abdul Azeez</h4>
                <h5>⭐️⭐️⭐️⭐️</h5>
              </div>
            </div>
          </div>
        </div>
        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </section>

  <script src="https://unpkg.com/scrollreveal"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="public_js/main.js"></script>
</body>
